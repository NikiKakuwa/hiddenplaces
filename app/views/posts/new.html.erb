
<div class="post post-form">
<%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
    <h3>
    <% @post.errors.count %>errors prohibited this post from being saved:
    </h3>

	<ul>
	<% @post.errors.full_messages.each do |message| %>
	<li><%= message %></li>
	<% end %>
    </ul>
    <% end %>

    <h4>タイトル</h4>
    <%= f.text_field :title, class:"form" %>

    <h4>本文</h4>
    <%= f.text_area :body, class:"form" %>

    <h4>写真</h4>
    <%= f.attachment_field :post_image %>
    <br>
    <%= f.submit '投稿', class: "btn-sm btn-success" %>

<% end %>
</div>