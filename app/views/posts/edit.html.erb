
<div class="post post-form">
<%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
    <h3>
    <% @post.errors.count %>errors prohibited this post from being saved:
    </h3>

	<ul>
	<% @post.errors.full_messages.each do |message| %>
	<li><%= message %></li>
	<% end %>
    </ul>
    <% end %>

    <h4>タイトル</h4>
    <%= f.text_field :title, class:"form" %>

    <h4>本文</h4>
    <%= f.text_area :body, class:"form" %>

    <h4>写真</h4>
    <%= attachment_image_tag @post, :post_image, fallback: "no_image.jpg", class:"user-profile-image" %>
    <%= f.attachment_field :post_image %>
    <br>
    <%= f.submit '編集', class:"btn-sm btn-success" %>

<% end %>

<br>
<%= link_to "投稿ページに戻る", post_path(@post) %>

</div>