<h2>User info</h2>
<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
    <h3>
    <% @user.errors.count %>errors prohibited this book from being saved:
    </h3>

    <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>
    <div class="form-group has-icon">
        <div class="field">
        Name
        <%= f.text_field :name, autofocus: true %>
        </div>
