
<div class="profile">

<div class="user-image-div">
	<%= attachment_image_tag @user, :user_image, fallback: "no_image.jpg", class:"user-image" %>
</div>

<span class="name"><%= @user.name %></span>
<span class="name"><%= link_to "フォロー", follows_user_path(@user.id) %> <%= link_to "フォロワー", followers_user_path(@user.id) %></span>

<span class="name">
<% if current_user != @user %>
	<% if @user.followed_by?(current_user) %>
		<%= link_to "フォロー済み", user_relationships_path(@user.id), method: :delete %>
	<% else %>
		<%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
	<% end %>
<% end%>
</span>

<div class="introduction"><%= @user.introduction %></div>



	<% if @user.id == current_user.id %>
    <span class="edit">
	    <%= link_to "編集", edit_user_path(@user) %>
		</span>
	<% end %>

</div>