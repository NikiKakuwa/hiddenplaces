<div class="container">
<div class="row">

	<div class="col-xs-3">

	<%= render 'users/profile', user: current_user %>

	</div>

	<h4>Users</h4>
	<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th>introduction</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td>
				<%= attachment_image_tag user, :user_image, fallback: "no_image.jpg", size:'40x40' %>
				</td>
			<td><%= user.name %></td>
			<td><%= user.introduction %></td>
			<td><%= link_to "この人の投稿を見る", user_path(user) %></td>
		</tr>
		<% end %>
	</tbody>
	</table>
</div>
</div>
