<!DOCTYPE html>
<html>
  <head>
    <title>HiddenPlaces</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-default nvbcustom">
	<div class="container-fluid">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand"><img src="/assets/hiddenplacesLogo.png" class="logo"></a>
		</div>

		<div class="collapse navbar-collapse" id="navbarEexample1">
			<ul class="nav navbar-nav navbar-right">
       <% if user_signed_in? %>
				<li>
          <%= link_to "ホーム", user_path(current_user) %>
        </li>
				<li>
          <%= link_to "投稿一覧", posts_path %>
        </li>
        <li>
          <%= link_to "新規投稿", posts_new_path %>
        </li>
				<li>
          <%= link_to "ユーザー一覧", users_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </li>
      <% else %>
        <li>
            <%= link_to "ホーム", root_path %>
        </li>
          <li>
        <%= link_to "About", posts_about_path %>
        </li>
        <li>
          <%= link_to "新規登録", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_user_session_path %>
        </li>
      <% end %>
			</ul>
		</div>
	</div>
</nav>
    <%= yield %>
  </body>
</html>
